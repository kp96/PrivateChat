<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <!--[if IE]>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <![endif]-->
    <title>Welcome to private chat</title>
    <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body style="font-family:Verdana">
<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<script src="/bower_components/angular/angular.min.js"></script>
<script src="/bower_components/firebase/firebase.js"></script>
<script src="/bower_components/angularfire/dist/angularfire.min.js"></script>
<script src="/bower_components/angular-route/angular-route.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/public/js/controllers/angchatbot.js"></script>
<script src="/public/js/services.js"></script>
<script src="/public/js/backstretch.js"></script>
<script src="/bower_components/angular-scroll-glue/src/scrollglue.js"></script>
<div class="container" ng-app="chatbot" ng-controller="chatController">
    <div class="row " style="padding-top:40px;">
        <h3 class="text-center" style="color: #fff;" >Private Chat Served! </h3>
        <br /><br />
        <div class="col-md-8">
            <div class="panel panel-info">
                <div class="panel-heading"
                        >
                    RECENT CHAT HISTORY
                </div>
                <div class="panel-body" id="chat-panel" style="height:400px;overflow-y: scroll; overflow-x: hidden" scroll-glue>
                    <ul class="media-list">
                        <li class="media" ng-repeat="message in messages">
                            <div class="media-body">
                                <div class="media">
                                    <a class="pull-left" href="#">
                                        <img class="media-object img-circle " src={{message.img}} />
                                    </a>
                                    <div class="media-body" >
                                        {{message.content}}
                                        <br />
                                        <small class="text-muted">{{message.username}}</small>
                                        <hr />
                                    </div>
                                </div>

                            </div>
                        </li>
                    </ul>
                </div>
                <div class="panel-footer">
                    <div class="input-group">
                        <form ng-submit="submit()" class="form-inline" >
                            <input type="text" ng-model="user.message"  class="form-control" placeholder="Enter Message" ng-required="true"/>
                            <span>
                                <input class="btn btn-info"  type="submit" value="Send"/>
                            </span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    ONLINE USERS
                </div>
                <div class="panel-body" style="height:400px;overflow-y: scroll; overflow-x: hidden">
                    <ul class="media-list">
                        <li class="media" ng-repeat="user in users">

                            <div class="media-body">

                                <div class="media">
                                    <a class="pull-left" href="#">
                                        <img class="media-object img-circle" style="max-height:40px;" src={{user.img}} />
                                    </a>
                                    <div class="media-body" >
                                        <h5>{{user.username}}  </h5>

                                        <small class="text-muted">Online | Active</small>
                                    </div>
                                </div>

                            </div>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>
<script>
    $.backstretch("/public/images/header.jpg");
</script>
</body>
</html>
